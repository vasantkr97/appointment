generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  SERVICE_PROVIDER
}

enum serviceTypes {
  MEDICAL
  HOUSE_HELP
  BEAUTY
  FITNESS
  EDUCATION
  OTHER
}

enum status {
  BOOKED
  CANCELLED
}

model User {
  id           String   @id @default(uuid())
  name         String
  email        String   @unique
  passwordHash String
  role         Role
  createdAt    DateTime @default(now())

  Service     Service[]
  appointment Appointment[]
}

model Service {
  id   String       @id @default(uuid())
  name String
  type serviceTypes

  providerId String
  provider   User   @relation(fields: [providerId], references: [id])

  durationMinutes Int

  createdAt DateTime @default(now())

  availability Availability[]
  appointments Appointment[]
}

model Availability {
  id String @id @default(uuid())

  serviceId String
  services  Service @relation(fields: [serviceId], references: [id])

  dayOfWeek Int
  startTime String 
  endTime   String 
}

model Appointment {
  id String @id @default(uuid())

  userId String
  user   User   @relation(fields: [userId], references: [id])

  serviceId String
  service   Service @relation(fields: [serviceId], references: [id])

  date      String 
  startTime String 
  endTime   String 

  slotId String @unique

  status    status
  createdAt DateTime @default(now())
}
